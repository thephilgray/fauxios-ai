---
interface Props {
  hook: string;
  details: string;
  whyItMatters: string;
}

const { hook, details, whyItMatters } = Astro.props;
---

<div class="article-content text-lg leading-relaxed">
  <p class="hook font-semibold mb-6">{hook}</p>

  <h2 class="text-2xl font-bold mb-3">Details:</h2>
  <ul class="details list-disc pl-5 mb-6 space-y-2">
    {details.split('\n').map((item) => item.trim()).filter(item => item.length > 0).map((item) => (
      <li>{item.startsWith('*   ') ? item.substring(4) : item}</li>
    ))}
  </ul>

  <h2 class="text-2xl font-bold mb-3">Why it Matters:</h2>
  <p class="why-it-matters">{whyItMatters}</p>
</div>